<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.HSMA.LoginLayer" parent="Widget.Material3.CardView.Elevated">
        <item name="shapeAppearance">@style/ShapeAppearance.HSMA.LoginLayer</item>
    </style>

    <style name="ShapeAppearance.HSMA.LoginLayer" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">50dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.HSMA.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.HSMA.Button.OutlinedButton.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Fields -->
    <style name="ShapeAppearance.HSMA.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">40dp</item>
    </style>

    <!-- Navigation Drawer -->
    <style name="Widget.HSMA.NavigationView" parent="Widget.Material3.NavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.HSMA.NavigationView</item>
        <item name="itemIconTint">@color/navigation_item_color</item>
        <item name="itemTextColor">@color/navigation_item_color</item>
        <item name="itemShapeFillColor">@color/navigation_item_background_color</item>
    </style>

    <style name="ThemeOverlay.HSMA.NavigationView" parent="">
        <item name="colorPrimary">@color/primary_100</item>
        <item name="colorSurface">@color/primary_50</item>
        <item name="colorOnSurface">@color/primary_900</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.HSMA.NavigationDrawer</item>
    </style>

    <style name="ShapeAppearance.HSMA.NavigationDrawer" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>
</resources>