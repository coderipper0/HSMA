<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LoginFragment">

    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.coderipper.hsma.usecases.login.LoginFragment"
        android:label="@string/login_fragment_label"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/login_to_sign_in"
            app:destination="@id/SignInFragment" />
    </fragment>
    <fragment
        android:id="@+id/SignInFragment"
        android:name="com.coderipper.hsma.usecases.signin.SigninFragment"
        android:label="@string/signin_fragment_label"
        tools:layout="@layout/fragment_signin">

        <action
            android:id="@+id/sign_in_to_login"
            app:destination="@id/SignInFragment" />
    </fragment>
</navigation>