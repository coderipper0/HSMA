<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/hotel_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="16dp"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.HSMA.Circle"
            app:srcCompat="@drawable/background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/hotel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Riu Hotels and Resorts"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@+id/hotel_icon"
            app:layout_constraintStart_toEndOf="@+id/hotel_icon"
            app:layout_constraintBottom_toBottomOf="@+id/hotel_icon"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$980"
            android:textColor="@color/error"
            android:layout_margin="16dp"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/start_date"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Sep 3"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/hotel_icon"
            app:layout_constraintStart_toStartOf="@id/hotel_icon"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/to_icon_dates"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:srcCompat="@drawable/to"
            app:layout_constraintTop_toTopOf="@+id/start_date"
            app:layout_constraintStart_toEndOf="@+id/start_date"
            app:layout_constraintBottom_toBottomOf="@+id/start_date"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/end_date"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Sep 10"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="@id/to_icon_dates"
            app:layout_constraintStart_toEndOf="@id/to_icon_dates"
            app:layout_constraintBottom_toBottomOf="@+id/to_icon_dates"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/quantity"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="3 Personas"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/start_date"
            app:layout_constraintStart_toStartOf="@+id/start_date"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/to_icon"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:srcCompat="@drawable/to"
            app:layout_constraintTop_toTopOf="@+id/quantity"
            app:layout_constraintStart_toEndOf="@+id/quantity"
            app:layout_constraintBottom_toBottomOf="@+id/quantity"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/room_type"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textAlignment="center"
            android:text="Suit"
            app:layout_constraintTop_toTopOf="@id/to_icon"
            app:layout_constraintStart_toEndOf="@id/to_icon"
            app:layout_constraintBottom_toBottomOf="@+id/to_icon"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    


</com.google.android.material.card.MaterialCardView>